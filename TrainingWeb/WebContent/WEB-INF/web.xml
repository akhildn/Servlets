<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>TrainingWeb</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>login.html</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <context-param>
    <param-name>server</param-name>
    <param-value>tomcat</param-value>
  </context-param>
  <context-param>
    <param-name>version</param-name>
    <param-value>9.0</param-value>
  </context-param>
  <servlet>
    <servlet-name>HelloWorldXmlServlet</servlet-name>
    <servlet-class>com.training.servlet.HelloWorldXmlServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HelloWorldXmlServlet</servlet-name>
    <url-pattern>/HelloWorldXmlServlet</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>180</session-timeout>
  </session-config>
</web-app>